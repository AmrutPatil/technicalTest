<div class="modal fade" id="resetPasswordModal" tabindex="-1" role="dialog" aria-labelledby="resetPasswordModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <%= form_tag({controller: 'users', action: "reset_password"}, method: "post", remote: true) do %>
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="resetPasswordModalLabel">Reset Password</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="resetPasswordEmail">Email</span>
            </div>
            <%= text_field_tag(:resetPasswordEmail, '', class: 'form-control', placeholder: 'Email', :required => true) %>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <%= submit_tag("Reset Password", :class => 'btn btn-primary') %>
        </div>
      </div>
    <% end %>
  </div>
</div>
